# ============================================
# Actime Docker Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env file to git!

# ============================================
# Database Configuration
# ============================================
# SQL Server SA password (must be strong: min 8 chars, uppercase, lowercase, number, special char)
DB_PASSWORD=YourStrong@Password123!

# ============================================
# JWT Authentication
# ============================================
# Secret key for signing JWT tokens (min 32 characters)
JWT_SECRET=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=Actime
JWT_AUDIENCE=ActimeApp
JWT_ACCESS_EXPIRATION=15
JWT_REFRESH_EXPIRATION=7

# ============================================
# Email Settings (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@actime.com
SMTP_FROM_NAME=Actime
SMTP_ENABLE_SSL=true

# ============================================
# Frontend URL (for email links)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# Admin Account (created on first run)
# ============================================
ADMIN_EMAIL=admin@actime.com
ADMIN_PASSWORD=Admin123!
